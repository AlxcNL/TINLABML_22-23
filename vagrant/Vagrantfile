# -*- mode: ruby -*-
# vi: set ft=ruby :

VAGRANT_API_VERSION = "2"
WORKSPACE = "../ansible"

SERVER_IMAGE_NAME = "gusztavvargadr/ubuntu-desktop"
SERVER_BOX_VERSION = "2004.0.2304"
SERVER_IP = "192.168.56.20"

CLIENT_IMAGE_NAME = "generic/ubuntu2210"
CLIENT_BOX_VERSION = "4.2.16"
CLIENT_IP = "192.168.56.21"

Vagrant.configure(VAGRANT_API_VERSION) do |config|
  config.ssh.insert_key = "true"
  config.ssh.forward_agent = "true"

  config.vm.define "torcs-server" do |server|
    server.vm.provider "virtualbox" do |vb|
      vb.check_guest_additions = true
      vb.memory = "4096"
      vb.cpus = 4
      vb.gui = true
    end
      
    server.vm.box = SERVER_IMAGE_NAME
    server.vm.box_version = SERVER_BOX_VERSION          
    server.vm.network "private_network", ip: SERVER_IP
    server.vm.hostname = "torcs-server"

    # PROVISION
    server.vm.synced_folder WORKSPACE, "/home/vagrant/ansible"       
    server.vm.provision "shell", inline: "cp /home/vagrant/ansible/png/torcs1.png /home/vagrant/Pictures/"
    server.vm.provision "shell", path: "../ansible/sh/install_python.sh"
    server.vm.provision "shell", path: "../ansible/sh/install_ansible.sh"
    server.vm.provision "shell", path: "../ansible/sh/install_ansible_plugins.sh"
    server.vm.provision "shell", inline: "/home/vagrant/ansible/playbooks/playbook-torcs-server.yaml"
    
  end  

  config.vm.define "torcs-client" do |client|
    client.vm.provider "virtualbox" do |vb|
      vb.check_guest_additions = true
      vb.memory = "2048"
      vb.cpus = 2
      vb.gui = false
    end
      
    client.vm.box = CLIENT_IMAGE_NAME
    client.vm.box_version = CLIENT_BOX_VERSION          
    client.vm.network "private_network", ip: CLIENT_IP
    client.vm.hostname = "torcs-client"
    
    # PROVISION
    client.vm.provision "shell", path: "../ansible/install_ansible.sh"
    client.vm.provision "shell", path: "../ansible/install_ansible_plugins.sh"
    client.vm.synced_folder WORKSPACE, "/home/vagrant/ansible"       

  end    

end